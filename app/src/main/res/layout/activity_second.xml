<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0ffff0"
    tools:context="edu.misao.toast_radiobutton.SecondActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Result"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Show the name"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tvMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Show the mobile"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvName"
        />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Show the email"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvMob"
        />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Show the age"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvEmail"
        />

    <TextView
        android:id="@+id/tvPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Show the pass"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvAge"
        />

    <TextView
        android:id="@+id/tvBir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Show the birthday"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvPass"
        />

    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Show the gender"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvBir"
        />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="back"
        android:textSize="20dp"
        android:layout_below="@+id/gender"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textSize="20dp"
        android:layout_marginLeft="180dp"
        android:layout_below="@+id/gender"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
