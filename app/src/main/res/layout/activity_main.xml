<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f0"
    tools:context="edu.misao.toast_radiobutton.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Toast and RadioButton"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Name"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tvMob"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Mobile"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvName"
        />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Email"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvMob"
        />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Age"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvEmail"
        />

    <TextView
        android:id="@+id/tvPass"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Pass"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvAge"
        />

    <TextView
        android:id="@+id/tvBir"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Birthday"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvPass"
        />

    <TextView
        android:id="@+id/tvGen"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Gender"
        android:textSize="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tvBir"
        />


    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input the Name"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/etMob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input the Mobile"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etName"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input the Email"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etMob"
        android:inputType="textWebEmailAddress"
        />

    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input the Age"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etEmail"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input the Password"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etAge"
        android:inputType="textWebPassword"
        />

    <EditText
        android:id="@+id/etBir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input the Birthday"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etPass"
        android:inputType="datetime"
        />


    <!--<EditText-->
    <!--android:id="@+id/gender"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:hint="Input the Gender"-->
    <!--android:layout_marginLeft="120dp"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:layout_below="@+id/etBir"-->
    <!--/>-->

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etBir"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="male" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="female" />
    </RadioGroup>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="next page"
        android:textSize="20dp"
        android:layout_below="@+id/gender"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
